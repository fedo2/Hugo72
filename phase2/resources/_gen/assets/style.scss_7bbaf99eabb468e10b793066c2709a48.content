@charset "UTF-8";
.green {
  background-color: #d4edda;
  /* světle zelená */ }

.red {
  background-color: #f8d7da;
  /* světle červená */ }

.gray {
  background-color: #e2e3e5;
  /* světle šedá */ }

body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  line-height: 1.6; }

header {
  background: #f4f4f4;
  padding: 20px;
  text-align: center; }

table {
  width: 80%;
  margin: 20px auto;
  border-collapse: collapse; }

table,
th,
td {
  border: 1px solid #ddd; }

th,
td {
  padding: 10px;
  text-align: left; }

th {
  background-color: #f4f4f4; }
